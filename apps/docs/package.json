{
  "name": "@beatui/docs",
  "version": "1.0.0",
  "type": "module",
  "description": "BeatUI Documentation Site",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "generate-static": "npx tsx scripts/generate-static.ts && npx tsx scripts/validate-static.ts",
    "serve": "serve .",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,js,json,css,html,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "node --test \"tests/**/*.test.js\"",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:all": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:smoke": "playwright test --grep @smoke --project=chromium",
    "test:e2e:a11y": "playwright test --grep @a11y --project=chromium",
    "test:e2e:visual": "playwright test --grep @visual --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:update-snapshots": "playwright test --update-snapshots --project=chromium",
    "gen:schema": "npx tsx scripts/gen-meta-schemas.ts",
    "gen:api": "npx tsx scripts/generate-api-json.ts"
  },
  "keywords": [
    "documentation",
    "beatui",
    "vite"
  ],
  "author": "Franco Ponticelli",
  "license": "MIT",
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.2.2",
    "@tempots/beatui": "workspace:*",
    "@tempots/dom": "^37.0.4",
    "@tempots/std": "~0.26.1",
    "@tempots/ui": "^16.0.1",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@tempots/eslint-plugin": "0.13.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "25.2.3",
    "@typescript-eslint/eslint-plugin": "8.56.0",
    "@typescript-eslint/parser": "8.56.0",
    "cheerio": "1.2.0",
    "eslint": "10.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "fs-extra": "11.3.3",
    "jsdom": "28.1.0",
    "prettier": "3.8.1",
    "serve": "^14.2.5",
    "tailwindcss": "4.1.18",
    "tsx": "4.21.0",
    "typedoc": "^0.28.17",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.0",
    "vite": "7.3.1"
  },
  "packageManager": "pnpm@10.21.0"
}
