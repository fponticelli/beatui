{
  "name": "@beatui/docs",
  "version": "1.0.0",
  "type": "module",
  "description": "BeatUI Documentation Site",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npx tsx scripts/generate-static.ts && pnpm run validate-static",
    "validate-static": "npx tsx scripts/validate-static.ts",
    "serve": "serve .",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,js,json,css,html,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "node --test \"tests/**/*.test.js\"",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:all": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:smoke": "playwright test --grep @smoke --project=chromium",
    "test:e2e:a11y": "playwright test --grep @a11y --project=chromium",
    "test:e2e:visual": "playwright test --grep @visual --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:update-snapshots": "playwright test --update-snapshots --project=chromium",
    "gen:schema": "npx tsx scripts/gen-meta-schemas.ts"
  },
  "keywords": [
    "documentation",
    "beatui",
    "vite"
  ],
  "author": "Franco Ponticelli",
  "license": "MIT",
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^14.2.1",
    "@tempots/beatui": "workspace:*",
    "@tempots/dom": "35.0.0",
    "@tempots/std": "0.24.0",
    "@tempots/ui": "14.0.0",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@tempots/eslint-plugin": "0.6.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "22.15.18",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "cheerio": "1.1.2",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "fs-extra": "11.3.2",
    "jsdom": "26.1.0",
    "prettier": "3.6.2",
    "serve": "^14.2.5",
    "tailwindcss": "4.1.17",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.0",
    "vite": "7.1.9"
  },
  "packageManager": "pnpm@10.21.0"
}
