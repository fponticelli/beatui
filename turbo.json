{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": []
    },
    "format": {
      "outputs": []
    },
    "typecheck": {
      "dependsOn": []
    },
    "check": {
      "dependsOn": ["build", "lint", "format", "typecheck", "test"]
    },
    "clean": {
      "cache": false
    }
  }
}
