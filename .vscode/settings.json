{
  // Use Prettier as the default formatter for TypeScript files
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // Disable ESLint formatting since we're using Prettier directly
  "eslint.format.enable": false,
  // Ensure Prettier uses the project's configuration
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  "chatgpt.commentCodeLensEnabled": true,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#f3fbef",
    "activityBar.background": "#f3fbef",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#809fdf",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#f3fbef",
    "statusBar.background": "#d3f1c6",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#b3e79d",
    "statusBarItem.remoteBackground": "#d3f1c6",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#d3f1c6",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#d3f1c699",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#d3f1c6"
}
